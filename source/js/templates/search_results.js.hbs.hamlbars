#modal-wrapper
  #modal-container
    = hb 'view Sapporojs.SearchTextFieldView valueBinding=controllers.query.content'
    %ul.results
      = hb 'view Sapporojs.SearchResultTextView'
      = hb 'each controller' do
        = hb 'if isMatchedQueries' do
          %li
            %h2
              %a{bind: {href: 'url'}}= hb 'title'
            = hb 'summary_text'
= hb 'view Sapporojs.ModalBgView controllerBinding="controller"'
